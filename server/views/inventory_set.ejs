<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/javascript/inventory_draw_cards.js"></script>
    <link rel="stylesheet" href="/css/inventory.css">
    <title><%= `${allCardsInSet.set}`%></title>
</head>
<body>
    <header>
        <%- include('./templates/header'); %>
      </header>
    <h1><%= `${allCardsInSet[0].set}`%></h1>
    <div id=cardlist></div>
    <div id=cards></div>
    <div id="export">
        <form id="downloadForm"></form>
    </div>
    <script type='text/javascript'>
        let allCardsInSetObj = Object.values(JSON.parse(`<%-JSON.stringify(allCardsInSet)%>`));
        let userCardsInSetObj = Object.values(JSON.parse(`<%-JSON.stringify(userCardsInSet)%>`));
        drawcards(allCardsInSetObj,userCardsInSetObj);
        window.addEventListener('scroll',function() {
            //When scroll change, you save it on localStorage.
            localStorage.setItem('scrollPosition',window.scrollY);
        },false);
        window.addEventListener('load',function() {
             if(localStorage.getItem('scrollPosition') !== null)
            window.scrollTo(0, localStorage.getItem('scrollPosition'));
        },false);

    </script>
</body>
</html>